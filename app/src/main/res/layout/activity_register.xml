<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteColor"
    tools:context=".activity.RegisterActivity">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/footer_radius"
        android:gravity="center_horizontal"
        android:paddingVertical="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/ipnu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_ipnu" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ippnu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/ipnu"
            android:gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_ippnu" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nu"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/ippnu"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/logo_nu" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fatayat"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@id/muslimat"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/logo_fatayat" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ansor"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/ipnu"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/logo_ansor" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/banser"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/ippnu"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/ansor"
            android:gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_banser" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/muslimat"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@id/nu"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/banser"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/logo_muslimat" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pergunu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/fatayat"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/muslimat"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/logo_pergunu" />
        </RelativeLayout>


    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_nama"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:hint="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background">

        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="@id/layout_nama"
        app:layout_constraintStart_toStartOf="@id/layout_nama"
        app:layout_constraintTop_toBottomOf="@id/layout_nama">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_birthday"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Birthday"
        app:layout_constraintEnd_toEndOf="@id/layout_email"
        app:layout_constraintStart_toStartOf="@id/layout_email"
        app:layout_constraintTop_toBottomOf="@id/layout_email">

        <EditText
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center_vertical"
            android:inputType="number"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_nomorTlp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        app:layout_constraintEnd_toEndOf="@id/layout_birthday"
        app:layout_constraintStart_toStartOf="@id/layout_birthday"
        app:layout_constraintTop_toBottomOf="@id/layout_birthday">

        <EditText
            android:id="@+id/nomorTlp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center_vertical"
            android:inputType="number"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_pimpinan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Delegation"
        app:layout_constraintEnd_toEndOf="@id/layout_nomorTlp"
        app:layout_constraintStart_toStartOf="@id/layout_nomorTlp"
        app:layout_constraintTop_toBottomOf="@id/layout_nomorTlp">

        <EditText
            android:id="@+id/pimpinan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center_vertical"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        app:layout_constraintEnd_toEndOf="@id/layout_pimpinan"
        app:layout_constraintStart_toStartOf="@id/layout_pimpinan"
        app:layout_constraintTop_toBottomOf="@id/layout_pimpinan"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="25dp"
        android:background="@drawable/button"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:onClick="registerUser"
        android:text="register"
        android:textColor="@color/WhiteColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_password" />

    <Button
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/button"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:text="login"
        android:textColor="@color/WhiteColor"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/register"
        app:layout_constraintTop_toTopOf="@id/register" />
</androidx.constraintlayout.widget.ConstraintLayout>