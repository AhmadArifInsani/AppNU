<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteColor"
    tools:context=".Organisasi">

    <RelativeLayout
        android:id="@+id/footer_berita_kegiatan"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/footer"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="3dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/back">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Berita Kegiatan"
                android:textSize="20dp"
                android:textColor="@color/BlackColor"
                android:fontFamily="@font/poppinssemibold"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/background_organisasi_1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/menu"
        app:layout_constraintTop_toBottomOf="@+id/footer_berita_kegiatan">

        <RelativeLayout
            android:id="@+id/image_1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:layout_margin="15dp" >
            <ImageView
                android:id="@+id/img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_1"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Pelantikan PR IPNU IPPNU Desa Plosokerep Dilaksanakan di Gerha Abhipraya yang dihadiri oleh Ketua PAC IPNU IPPNU Sumobito"
                android:textColor="@color/BlackColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_1"
                android:text="Baca Selengkapnya"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/blue"/>
        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/background_organisasi_2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/menu"
        app:layout_constraintTop_toBottomOf="@+id/background_organisasi_1">

        <RelativeLayout
            android:id="@+id/image_2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:layout_margin="15dp" >
            <ImageView
                android:id="@+id/img_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_2"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_2"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Tournament Badminton yang Dilaksanakan oleh PR IPNU IPPNU Desa Plosokerep Berjalan dengan Lancar"
                android:textColor="@color/BlackColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_2"
                android:text="Baca Selengkapnya"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/blue"/>
        </RelativeLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>