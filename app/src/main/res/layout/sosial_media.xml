<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SosialMedia"
    android:background="@color/WhiteColor">

    <RelativeLayout
        android:id="@+id/footer_materi"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/footer"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="3dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/back"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="Sosial Media"
                android:textColor="@color/BlackColor"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/footer_materi">

        <RelativeLayout
            android:id="@+id/background_1"
            android:layout_width="165dp"
            android:layout_height="200dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/menu_organisasi"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:src="@drawable/image_sosialmedia_1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_below="@id/image_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="NGOPI (Ngobrol Perkara Ikatan) Sosialisasi Bersama Rekan Ketua"
                    android:textAlignment="center"
                    android:textColor="@color/BlackColor"
                    android:textSize="8sp" />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/background_2"
            android:layout_width="165dp"
            android:layout_height="200dp"
            android:layout_toEndOf="@id/background_1"
            android:background="@drawable/menu_organisasi"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:src="@drawable/image_sosialmedia_2" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_below="@id/image_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="MAKESTA PAC IPNU IPPNU Sumobito"
                    android:textAlignment="center"
                    android:textColor="@color/BlackColor"
                    android:textSize="8sp" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_1">

        <RelativeLayout
            android:id="@+id/background_3"
            android:layout_width="165dp"
            android:layout_height="200dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/menu_organisasi"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:src="@drawable/image_sosialmedia_3" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_below="@id/image_3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="LAKMUD PAC IPNU IPPNU Sumobito"
                    android:textAlignment="center"
                    android:textColor="@color/BlackColor"
                    android:textSize="8sp" />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/background_4"
            android:layout_width="165dp"
            android:layout_height="200dp"
            android:layout_toEndOf="@id/background_3"
            android:background="@drawable/menu_organisasi"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/image_4"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:src="@drawable/image_sosialmedia_4" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_below="@id/image_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Tournament Badminton PAC IPNU IPPNU Sumobito"
                    android:textAlignment="center"
                    android:textColor="@color/BlackColor"
                    android:textSize="8sp" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>