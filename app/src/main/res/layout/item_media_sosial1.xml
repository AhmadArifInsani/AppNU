<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_16dp"
    android:background="@color/WhiteColor"
    android:elevation="@dimen/dimen_1dp"
    android:layout_gravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/profil"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/profil"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_7sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/nama"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:text="Ahmad Arif Insani"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/BlackColor"
            android:textSize="15sp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@id/profil"
            app:layout_constraintTop_toTopOf="@id/profil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ranting"
            />
        <TextView
            android:id="@+id/ranting"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:text="PR Plosokerep"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/BlackColor"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/nama"
            app:layout_constraintTop_toBottomOf="@id/nama"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/profil"
            />
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="500dp"
            android:src="@drawable/image_sosialmedia_2"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@id/ranting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/deskripsi"
            />
        <TextView
            android:id="@+id/deskripsi"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:text="asdwadjafbj, hllawdak wfj"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/BlackColor"
            android:textSize="13sp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/profil"
            />
        <TextView
            android:id="@+id/detail"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:text="...selengkapnya"
            android:textSize="13sp"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintStart_toEndOf="@id/deskripsi"
            app:layout_constraintBottom_toBottomOf="@id/deskripsi"
            app:layout_constraintTop_toTopOf="@id/deskripsi"
            />
        <TextView
            android:id="@+id/date"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:text="04 Juni"
            android:textSize="10sp"
            android:fontFamily="@font/poppinsmedium"
            app:layout_constraintTop_toBottomOf="@id/deskripsi"
            app:layout_constraintStart_toStartOf="@id/deskripsi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>